generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model game_genre {
  id       Int    @id @default(autoincrement())
  game_id  Int
  genre_id Int
  games    games  @relation(fields: [game_id], references: [game_id], onDelete: NoAction, onUpdate: NoAction)
  genres   genres @relation(fields: [genre_id], references: [genre_id], onDelete: NoAction, onUpdate: NoAction)
}

model games {
  game_id            Int          @id @default(autoincrement())
  name               String?      @db.VarChar(200)
  reviews            String?      @db.VarChar(40)
  steam_on_sale      String?      @db.VarChar(40)
  steam_price        String?      @db.VarChar(40)
  steam_normal_price String?      @db.VarChar(40)
  epic_on_sale       String?      @db.VarChar(40)
  epic_price         String?      @db.VarChar(40)
  epic_normal_price  String?      @db.VarChar(40)
  developer          String?      @db.VarChar(200)
  publisher          String?      @db.VarChar(200)
  short_desc         String?
  long_desc          String?
  banner             String?      @db.VarChar(300)
  images             String?
  specs              String?
  game_genre         game_genre[]
}

model genres {
  genre_id   Int          @id @default(autoincrement())
  genre      String?      @db.VarChar(40)
  game_genre game_genre[]
}
