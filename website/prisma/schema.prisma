generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model game_genre {
  id       Int @id @default(autoincrement())
  game_id  Int
  genre_id Int
}

model games {
  game_id            Int     @id @default(autoincrement())
  game_name          String? @db.VarChar(100)
  steam_on_sale      String? @db.VarChar(40)
  steam_price        String? @db.VarChar(40)
  steam_normal_price String? @db.VarChar(40)
  epic_on_sale       String? @db.VarChar(40)
  epic_price         String? @db.VarChar(40)
  epic_normal_price  String? @db.VarChar(40)
  game_developer     String? @db.VarChar(100)
  game_description   String?
  game_image         String? @db.VarChar(300)
}

model genres {
  genre_id Int    @id @default(autoincrement())
  genre    String @db.VarChar(40)
}
